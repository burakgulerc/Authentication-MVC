@model HomeVM
@{
    ViewBag.Title = "Login";
}

<h1 style="color:red">
    @ViewBag.Message
</h1>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel panel-body">
            @using (Html.BeginForm())
            {
                <div>
                    @Html.TextBoxFor(x => x.AppUser.UserName, new { placeholder = "Kullanıcı ismini giriniz", @class = "form-control" })
                </div>
                <div>
                    @Html.PasswordFor(x => x.AppUser.Password, new { placeholder = "Sifre giriniz", @class = "form-control" })
                </div>

                <div>
                    <button class="btn btn-primary">
                        Login
                    </button>
                </div>
            }
        </div>
    </div>
</div>

